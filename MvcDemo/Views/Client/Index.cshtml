@using MvcDemo.Helpers
@model MvcDemo.Common.Models.ClientsModel

@{
    ViewBag.Title = "Clients Dashboard";
}

<hr />
@if (Model != null && Model.Clients != null && Model.Clients.Count() > 0)
{

    <table cellpadding="0" cellspacing="0" class="display cell-border" id="datatable-clients">
        <thead>
            <tr>
                <th class="all" title="View Client">View</th>
                <th class="all" title="Client name">Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var client in Model.Clients)
            {
                <tr class="odd gradeX">
                    <td align="center">@Html.ActionImage("Index", "Course", "~/Content/images/search-black.png", "View", new { id = client.Id }, new { @title = "View Client" })</td>
                    <td align="center">@client.PortalName</td>
                </tr>
            }
        </tbody>

    </table>


}
else
{
  
    <div class="row col-md-offset-5">
                <p> <b> No information to display</b></p>
    </div>
   
}
