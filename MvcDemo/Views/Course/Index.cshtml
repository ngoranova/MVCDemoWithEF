@using MvcDemo.Helpers
@model MvcDemo.Common.Models.CoursesModel

@{
    ViewBag.Title = "Courses for Client " + Model.Client.PortalName;
}

<hr />
@if (Model != null && Model.Courses != null && Model.Courses.Count() > 0)
{

    <table cellpadding="0" cellspacing="0" class="display cell-border" id="datatable-courses">
        <thead>
            <tr>
                <th class="all" title="View Client">View</th>
                <th class="all" title="Client name">Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var course in Model.Courses)
            {
                <tr class="odd gradeX">
                    <td align="center">@Html.ActionImage("Index", "User", "~/Content/images/search-black.png", "View", new { id = course.Id}, new { @title = "View Client" })</td>
                    <td align="center">@course.CoursePortalName</td>
                </tr>
            }
        </tbody>

    </table>


}
else
{

    <div class="row col-md-offset-5">
        <p> <b> No information to display</b></p>
    </div>

}
